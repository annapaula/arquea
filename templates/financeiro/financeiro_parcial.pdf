{% load proto_tags %}
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>
@import url('/var/www/django/media/css/pdf.css');
@page {
  size: a{{ size }};
  background-image: url('/var/www/django/media/img/papel_timbrado.jpg');
  top: 0.5cm;
  left: 0.5cm;
  right: 0.5cm;
  bottom: 0.5cm;
  @frame footer {
                -pdf-frame-content: footerContent;
                bottom: 0.5cm;
                margin-right: 1cm;
                height: 1cm;
		left: -2.3cm;
                } 
} 
</style> 
</head>
<body>
<h1 repeat="1">Extrato do financeiro do processo {{ termo }}</h1>

   {% for p in parciais %}
    <table border="0" repeat="1" cellpchangeing="5">
    <h2>Parcial {{ p.parcial }} - Total liberado: {{ p.liberado|moeda }}. Diferença existente: {{ p.diferenca_total|moeda }}</h2>
       <tr><th>Data</th><th>Código</th><th>Histórico</th><th>Valor</th><th>Comprovante</th><th>Modalidade - [Parcial/(Página)]</th></tr>
    {% for e in p.extrato %}
           <tr><td>{% if e.data %}{{ e.data|date:"d/m/Y" }} [{{ e.valor_data|moeda }}]{% endif %}</td><td>{{ e.cod }}</td><td>{{ e.historico }}</td><td>{{ e.valor|moeda }}</td><td>{% if e.comprovante %}<a href="{{ e.comprovante.url }}">comprovante</a>{% endif %}</td><td style="color:{{ e.cor }};">{% if e.diferenca %}{{ e.diferenca|moeda }} (Diferença){% endif %}</td>{% if e.patrocinio %}<td>Discordância do movimento da cc
onta corrente: {{ e.patrocinio|moeda }}</td>{% endif %}</tr>
           {% for cc in e.cheques %}
              <tr><td colspan="3"></td><td>{{ cc.valor|moeda }}</td><td><a href="http://sistema.ansp.br/financeiro/extratocc/{{ cc.id }}">{{ cc.cod }}</a></td><td>{{ cc.parciais }}</td></tr>
              {% if cc.obs %}
                  <tr><td colspan="3"></td><td colspan="3"><b>Observação:</b> {{ cc.obs }}</td></tr>
              {% endif %}
           {% endfor %}
    {% endfor %}
    </table>

    {% endfor %}
  <div id="footerContent">
      pág <pdf:pagenumber example="00" />
  </div> 
</body>
</html>
