{% load proto_tags %}
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>
@import url('/var/www/django/media/css/pdf.css');
@page {
  size: a3;
  background-image: url('/var/www/django/media/img/papel_timbrado.jpg');
  top: 0.5cm;
  left: 0.5cm;
  right: 0.5cm;
  bottom: 0.5cm;
  @frame footer {
                -pdf-frame-content: footerContent;
                bottom: 0.5cm;
                margin-right: 1cm;
                height: 1cm;
		left: -2.3cm;
                } 
} 
</style> 
</head>
<body>
<h1 repeat="1">Extrato da conta corrente do projeto em {{ ano }}</h1>

    <table border="0" repeat="1" cellpchangeing="5">
    <tr><th>Data</th><th>Documento</th><th>Histórico</th><th>Valor</th><th>Liberação do financeiro</th><th>Pagamento</th><th>Imagem do cheque</th><th>Processo</th></tr>
    {% for e in extrato %}
        {% if e.data_oper %}
           <tr><td>{{ e.data_oper|date:"d/m/Y" }}</td><td>{{ e.cod_oper }}</td><td>{{ e.historico }}</td><td>{{ e.valor|moeda }}</td><td>{% if e.extrato_financeiro %}{{ e.extrato_financeiro.valor|moeda }}{% endif %}</td><td>{{ e.parciais }}</td><td>{% if e.imagem %}<a href="{{ e.imagem.url }}">cheque</a>{% endif %}</td><td>{{ e.extrato_financeiro.termo }}</td></tr>
           {% if e.obs %}
              <tr><td></td><td colspan="5"><b>Observação</b>: {{ e.obs }}</td></tr>
           {% endif %}
        {% else %}
           <tr><td colspan=3><b>Saldo ao final do mês</b></td><td><b>{{ e|moeda }}</b></td></tr>
        {% endif %}
    {% endfor %}
    </table>


  <div id="footerContent">
      pág <pdf:pagenumber example="00" />
  </div> 
</body>
</html>
