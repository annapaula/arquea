{% extends "base.pdf" %}
{% load proto_tags %}
{% block pagesize %}a3 landscape{% endblock %}
{% block landscape %}_paisagem{% endblock %}
{% block extrastyle %}
td { padding-top:3px; padding-left:2px;}
th { padding-top:3px; }
table tr td {
  border:1;
}

{% endblock %}
{% block content %}
<h1>Custos dos recursos contratados</h1>
<table border="1" repeat="1">
<tr><th>Contrato</th><th>OS</th><th>Data</th><th width="23%">Descrição</th><th width="23%">Referente</th><th>Unidade</th><th>Preço unitário</th><th>Qtd</th><th>Custo mensal sem imposto</th><th>Custo mensal com imposto</th><th>Meses pagos</th><th>Total sem imposto</th><th>Total com imposto</th><th>Nota fiscal</th><tr>
{% for r in recursos %}
   <tr>
     <td><a href="{% url admin:outorga_contrato_change r.planejamento.os.contrato.id %}">{{ r.planejamento.os.contrato.numero }}</a></td>
	 <td><a href="{% url admin:outorga_ordemdeservico_change r.planejamento.os.id %}">{{ r.planejamento.os }}</a></td>
         <td>{{ r.planejamento.os.data_inicio|date:"SHORT_DATE_FORMAT" }}</td>
	 <td>{{ r.planejamento.tipo }}</td>
	 <td>{{ r.planejamento.referente }}</td>
	 <td>{{ r.planejamento.unidade }}</td>
	 <td>{{ r.planejamento.valor_unitario|moeda }}</td>
	 <td>{{ r.planejamento.quantidade }}</td>
	 <td>{{ r.valor_mensal_sem_imposto|moeda }}</td>
	 <td>{{ r.valor_imposto_mensal|moeda }}</td>
	 <td>{{ r.quantidade }}</td>
	 <td>{{ r.total_sem_imposto|moeda }}</td>
	 <td>{{ r.total_geral|moeda }}</td>
	 <td><a href="{% url admin:financeiro_pagamento_change r.pagamento.id %}">{{ r.pagamento.protocolo.num_documento }}</a></td>
   </tr>
{% endfor %}
</table>
{% endblock %}
