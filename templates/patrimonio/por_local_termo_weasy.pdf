{% load proto_tags %}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
    @page {
        size:a4 landscape;
        background-image: url('media:{{papelaria.papel_timbrado_paisagem_a4}}');
        background-size: contain;
        background-repeat:no-repeat;
        margin-top:0;
        margin-right:1cm;
        margin-bottom:1cm;
        margin-left:0;
        padding: {{papelaria.paisagem_a4_margem_superior}}cm 1cm {{papelaria.paisagem_a4_margem_inferior}}cm 1cm;

        @bottom-right {
            content: 'Pág ' counter(page);
            white-space: pre;
            color: grey;
            vertical-align: bottom;
            font-family: Arial;
            font-size: 0.7em;
            margin-bottom: 0.8cm;
        }
    }

    th { text-align:center; font-size:11px; font-weight:bolder; }
    td { text-align:left; }
    .num { text-align:right; }
    .peq { width: 100px; }
     body {
        position:relative;
        margin: 0;
        padding: 0;
        width:100%;
        height:100%;
     }
     #conteudo {
        font-family: Arial;
        font-size:0.6em;
        position:relative;
        padding:0;
        margin:0;
     }
    h1, h3 {
        font-size:12px;
    }
    thead {display: table-header-group;}
    tr, th, td { page-break-inside: avoid; }
    th {text-align: left;}
    td {
        font-size:10px;
        word-wrap: break-word;
    }

    #tbl_title {
        border:1px black solid; 
        padding:0.5em;
        width: 27.80cm;
    }
    
    /* ID */
    #tbl_content td:nth-child(1) { width:0.9cm; }
    /* PROCESSO */
    #tbl_content td:nth-child(2) { width:1.8cm; }
    /* N.USP */
    #tbl_content td:nth-child(3) { width:1.1cm; }
    /* NF */
    #tbl_content td:nth-child(4) { width:1.7cm; }
    /* MODELO */
    #tbl_content td:nth-child(5) { width:2.7cm; }
    /* PART NUMBER */
    #tbl_content td:nth-child(6) { width:2.5cm; }
    /* NS */
    #tbl_content td:nth-child(7) { width:2.5cm; }
    /* APELIDO */
    #tbl_content td:nth-child(8) { width:2.1cm; }
    /* DESCRICAO */
    #tbl_content td:nth-child(9) { width:8.1cm; }
    /* POSICAO */
    #tbl_content td:nth-child(10) { width:2.5cm; }
    /* ESTADO */
    #tbl_content td:nth-child(11) { width:1.2cm; }
    
    #tbl_content {
        border-collapse:collapse;
    }
    #tbl_content thead {
        background-color:lightgray;
        font-weight:bold;
        
    }
    #tbl_content thead th {
        border:1px black solid;
        padding:0.5em;
    }
     
    .level1 {
        color:#102BB2; 
    }
    .level1 .level_btn {
        display:list-item;
        list-style:square inside;
    }
    .level2 {
        color:#FF6500; 
    }
    .level2 .level_btn {
        display:list-item;
        list-style:circle inside;
        padding-left:15px;
    }
    .level3 {
        color:#56B209; 
    }
    .level3 .level_btn {
        display:list-item;
        list-style:disc inside;
        padding-left:30px;
    }
    .level0.tr_border td {
        border-top:1px darkgray solid;
    }
    </style>
</head>
<body>
    <div id="conteudo">
        <h1 repeat="1">Inventário por local</h1>
        {% for end in enderecos %}
            <h3>
                {% if end.endereco %}
                    {{ end.endereco }}
                {% else %}
                    {{ end.detalhe }}
                {% endif %}
            </h3>
            {% for d in end.detalhes %}
                    <p></p>
                    <table id="tbl_title"><tr><td><strong>{{ d.detalhe }}</strong></td></tr></table>
                    <table id="tbl_content" cellpadding="5">
                    <thead>
                    <tr>
                        <th style="width:1cm">ID</th>
                        <th style="width:1cm">Processo</th>
                        <th style="width:1cm">N.USP</th>
                        <th style="width:1cm">NF</th>
                        <th style="width:1cm">Modelo</th>
                        <th style="width:1cm">Part number</th>
                        <th style="width:1cm">NS</th>
                        <th style="width:1cm">Apelido</th>
                        <th style="width:1cm">Descrição</th>
                        <th style="width:1cm">Posição</th>
                        <th style="width:1cm">Estado</th>
                    </tr>
                    </thead>
                    <tbody>
                   {% for p in d.patrimonio %}
                      <tr class="patr level0 tr_border" id="tr_{{p.id}}">
                        <td><div class="level_btn"></div>{{ p.id }}</td>
                        <td>{{ p.termo }}</td>
                        <td>{{ p.fmusp|default:'' }}</td>
                        <td>{{ p.num_documento }}</td>
                        <td>{{ p.modelo }}</td>
                        <td>{{ p.part_number }}</td>
                        <td>{{ p.ns }}</td>
                        <td>{{ p.apelido|default:'' }}</td>
                        <td>{{ p.descricao }} - {{ p.complemento }}</td>
                        <td>{{ p.posicao|default:'' }}</td>
                        <td>{{ p.estado }}</td>
                      </tr>
                      {% if nivel1 == 'on' %}
                      {% for f in p.contido %}
                         <tr class="patr level1 {% if forloop.last %} tr_border{% endif %}" id="tr_{{f.id}}">
                            <td><div class="level_btn"></div></td>
                            <td>{{ f.termo }}</td>
                            <td>{{ f.fmusp|default:'' }}</td>
                            <td>{{ f.num_documento }}</td>
                            <td>{{ f.modelo }}</td>
                            <td>{{ f.part_number }}</td>
                            <td>{{ f.ns }}</td>
                            <td>{{ f.apelido|default:'' }}</td>
                            <td>{{ f.descricao }}</td>
                            <td>{{ f.posicao|default:'' }}</td>
                            <td>{{ f.estado }}</td>
                          </tr>
                          {% if nivel2 == 'on' %}
                          {% for g in f.contido %}
                             <tr class="patr level2 {% if forloop.last %} tr_border{% endif %}" id="tr_{{g.id}}">
                                <td><div class="level_btn"></div></td>
                                <td>{{ g.termo }}</td>
                                <td>{{ g.fmusp|default:'' }}</td>
                                <td>{{ g.num_documento }}</td>
                                <td>{{ g.modelo }}</td>
                                <td>{{ g.part_number }}</td>
                                <td>{{ g.ns }}</td>
                                <td>{{ g.apelido|default:'' }}</td>
                                <td>{{ g.descricao }}</td>
                                <td>{{ g.posicao|default:'' }}</td>
                                <td>{{ g.estado }}</td>
                              </tr>
                             {% if nivel3 == 'on' %}
                             {% for h in g.contido %}
                                <tr class="patr level3 {% if forloop.last %} tr_border{% endif %}" id="tr_{{h.id}}">
                                    <td><div class="level_btn"></div></td>
                                    <td>{{ h.termo }}</td>
                                    <td>{{ h.fmusp|default:'' }}</td>
                                    <td>{{ h.num_documento }}</td>
                                    <td>{{ h.modelo }}</td>
                                    <td>{{ h.part_number }}</td>
                                    <td>{{ h.ns }}</td>
                                    <td>{{ h.apelido|default:'' }}</td>
                                    <td>{{ h.descricao }}</td>
                                    <td>{{ h.posicao|default:'' }}</td>
                                    <td>{{ h.estado }}</td>
                                 </tr>
                             {% endfor %}
                             {% endif %}
                         {% endfor %}
                         {% endif %}
                      {% endfor %}
                      {% endif %}
                      </tbody>
                   {% endfor %}
            {% endfor %}
            </table>
        {% endfor %}
    </div>
</body>
</html>
