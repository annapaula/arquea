{% load proto_tags %}
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>

@page {
    size:a4 landscape;
    margin: 0.5cm 1cm 6cm 1cm;
    background-image: url('graph:img/papel_timbrado_paisagem.jpg');
    background-size: cover;
    counter-increment: page;
    
    @bottom-right {
        content: 'Pág ' counter(page);
        white-space: pre;
        color: grey;
        vertical-align: bottom;
        font-family: Arial;
        font-size: 0.7em;
        margin-bottom: 0.8cm;
    }
}
body {
    font-family:Arial;font-size:9px; 
    margin:15px;
    clear:both;
    position:relative;
    left: 0;
    top: 0;
    margin: 0;
    padding: 0;
    width:100%;
    height:100%;
}
#content {
    margin: 0;
    padding: 0;
    width: 28cm;
    position:relative;
    top: 3.5cm;
    display: block;
    float: none !important;
}
h3 {font-size:1.5em;}
thead {display: table-header-group;}
tr, th, td { page-break-inside: avoid; }
th {text-align: left;}
td {
    font-size:1.1em;
    word-wrap: break-word;
}

/* ID */
#tbl_content td:nth-child(1) { width:0.9cm; }
/* PROCEDENCIA */
#tbl_content td:nth-child(2) { width:2cm; }
/* NF */
#tbl_content td:nth-child(3) { width:2cm; }
/* MARCA */
#tbl_content td:nth-child(4) { width:1.7cm; }
/* MODELO */
#tbl_content td:nth-child(5) { width:3cm; }
/* PART NUMBER */
#tbl_content td:nth-child(6) { width:2.5cm; }
/* DESCRICAO */
#tbl_content td:nth-child(7) { width:11cm; }
/* NS */
#tbl_content td:nth-child(8) { width:2.1cm; }
/* ESTADO */
#tbl_content td:nth-child(9) { width:2.1cm; }
</style>
</head>
<body>
<div id="content">
<h1 repeat="1">Inventário por local</h1>

{% comment %}
    <form action="{% url 'patrimonio.views.por_estado' 1 %}" method="GET">
       <input type="hidden" value="{{ termo.id }}" name="termo" />
       <input type="submit" value="Versão para impressão" />
    </form> {% endcomment %}

    <h4>{% if endereco %}{{ endereco }}{% else %}{{ detalhe.endereco }} - {{ detalhe }}{% endif %}</h4>
 
    <table id="tbl_content" border="1" repeat="1" cellpadding="5">
    <tr>
        <th>ID</th>
        {% if endereco %}<th>Local</th>{% endif %}
        <th>Procedência</th>
        <th>NF</th>
        <th>Marca</th>
        <th>Modelo</th>
        <th>Part number</th>
        <th width="30%">Descrição</th>
        <th>NS</th>
        <th>Estado</th>
    </tr>
    {% for d in detalhes %}
        <tr>
            {% if endereco %}<td>{{ d.detalhe }}</td>{% endif %}
            <td colspan="7"></td>
        </tr>
        {% for p in d.patrimonio %}
            <tr>
                <td>{{ p.id }}</td>
                {% if endereco %}<td></td>{% endif %}
                <td>{{ p.procedencia }}</td>
                <td>{{ p.pagamento.protocolo.num_documento }}</td>
                <td>{{ p.marca }}</td>
                <td>{{ p.modelo }}</td>
                <td>{{ p.part_number }}</td>
                <td>{{ p.descricao }}</td>
                <td>{{ p.ns }}</td>
                <td>{{ p.historico_atual.estado }}</td>
            </tr>
              {% for f in p.contido.all %}
                 <tr style="color:#0000ff;"><td></td><td>{{ f.procedencia }}</td><td>{{ f.pagamento.protocolo.num_documento }}</td><td>{{ f.marca }}</td><td>{{ f.modelo }}</td><td>{{ f.part_number }}</td><td>{{ f.descricao }}</td><td>{{ f.ns }}</td><td>{{ f.historico_atual.estado }}</td></tr>
              {% endfor %}
           {% endfor %}
    {% endfor %}
    </table>
</div>
</body>
</html>
