{% load proto_tags %}
{% load url from future %}
{% load i18n proto_tags admin_static %}
{% load static %}
{% get_static_prefix as STATIC_PREFIX %}

<style type="text/css">
h1 {
    font-size: 16px;
    color:#134089;
    font-family: Arial, Verdana, Helvetica, sans-serif;
    font-weight: bold;
    postion:relative;
    margin:0;
    display:block;
}
h2 {
    font-family: Arial, Verdana, Helvetica, sans-serif;
    font-size: 15px;
    font-weight: bold;
    color:#333;
} 


.tabela tr { height:5px; }

.u {
    background:white repeat-y;
    display:inline-block;
    width:7px;
    max-width:7px;
    min-width:7px;
    vertical-align:top;
    background-image: url('{{ STATIC_PREFIX }}img/1u.png');
}
.bloco-n {
    display:inline-block;
    width:20px;
    background-color:white;
    margin-right:7px;
    vertical-align:top;
    border-bottom:1px solid;
    border-color: #999a9a;
    
}
.bloco-n>div {
    position:relative;
}

.bloco-n .u-n {
    background:#d8d8d8;
    color:#636363;
    font:8px Verdana,Arial;
    border-top:0;
    border-right:1px;
    border-bottom:0;
    border-left:1px; 
    border-style:solid; 
    font-size:9px;
    min-height:19px;
}
.bloco-n .u-n div {
    border-top: 1px solid;
    vertical-align: middle;
    text-align: center;
    line-height: 18px;
}
/**
Coluna de furos do rack
*/
.u-n-left {
    width:5px; 
    display:block; 
    background-color:#eee; 
    position:absolute; 
    left:23px; 
    height: 19px; 
    top:0; 
    border-left:#aaa 2px solid; 
    border-right: #888 2px solid;
}
.u-n-right {
    width:5px; 
    display:block; 
    background-color:#eee; 
    position:absolute; 
    left:235px; 
    height: 19px; 
    top:0; 
    border-left:#aaa 2px solid; 
    border-right: #888 2px solid;
}
.u-n-f {
    background:black; 
    position:absolute; 
    width:3px; 
    height:3px; 
    left:1px; 
}
.f1 {
    top:3px;
}
.f2 {
    top:9px;
}
.f3 {
    top:15px;
}

.rack {
    width:255px;
    display:inline-block;
    margin-right:10px;
    margin-bottom:30px;
    font-size:0;
    top:20px;
    position:relative;
}
.interno {
    position:relative;
    display:inline-block;
    width:199px;
    margin-left:6px;
    margin-right:4px;
    font-size:10px;
    
}
.interno img {
    position:absolute;
    z-index: 5;
    width:199px;
    height:100%;
}
.interno div {
    position:absolute;
    z-index: 10;
}
.interno div div div {
    position:relative;
    display: table-cell;
    vertical-align:middle;
    width: 199px;
    text-align: center;
    color:#FFF
}
.interno div div div {
    text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black, -2px 0 1px black, 0 2px 1px black, 2px 0 1px black, 0 -2px 1px black;
}
.equip {
    display:inline-block;
    background:#81878b;
    width:199px;
    border-bottom:1px solid #fff;
    border-top:1px solid #fff;
    padding-right:1px; 
    padding-left:1px;
    vertical-align:middle; 
    line-height:1.5em;
}
.equip.pos_01 {
    width:97px;
    font-size: 9px;
}
.equip.pos_02 {
    right:0;
    width:97px;
    padding-right: 0;
    margin-right: 0;
    font-size: 9px;
}
.equip.pos_03 {
    
}
.equip-desc {
    position:absolute;
    top:0;
    left:0;
}
.dc {
    margin-top:5px;
}
.outros {
    position:relative;
    display:block;
}
.outros caption {
    display:block;
    text-align: left;
    font-size: 12px;
    font-weight: bold;
}
.outros table {
    margin-left:0;
    margin-right:0;
    margin-bottom:10px;
    margin-top:10px;
    width:100%;
    border-spacing:0;
}
.outros th,
.outros td {
    border: 1px solid;
    font-family: Arial, Verdana, Helvetica, sans-serif;
    font-size:11px;
}
.page-break {
    page-break-before:always;
    display: block;
    clear: both;
}
/**
    Exibe ou esconde as imagens dos stencils 
*/
 {% if chk_stencil == "0" %}
    .interno img { display:none; }
 {% endif %}
/**
    Exibe ou esconde as legendas dos equipamentos 
*/
 {% if chk_legenda == "0" %}
    .interno div div div { display:none; }
 {% endif %}
</style>
<h1>Diagrama de Racks Frontal</h1>
    {% for dc in dcs %}
    {% if not forloop.first %}
        <div class="page-break"></div>
    {% endif %}
    <div class="dc">
    <h1>{{ dc.nome }}</h1>
    {% for rack in dc.racks %}
       {% if not forloop.first and forloop.counter0|divisibleby:"6" %}
           <div class="page-break"></div>
       {% endif %}
        <div class="rack">
            <h2>
              {{ rack.nome }} ({{ rack.vazio }} ocupado)
            </h2>
            <div id="rack{{ dc.id }}_{{forloop.counter}}" class="bloco-n" style="position:relative; height: {{ rack.altura_pxs }}px;">
                <script>
                var content = '';
                for(i={{rack.altura_pts}};i>0;i--){
                    content += '<div>';
                    content += '<div class="u-n"><div>'+i+'</div></div>';
                    content += '<div class="u-n-left">';
                    content += '<div class="u-n-f  f1"></div>';
                    content += '<div class="u-n-f  f2"></div>';
                    content += '<div class="u-n-f  f3"></div>';
                    content += '</div>';
                    content += '<div class="u-n-right">';
                    content += '<div class="u-n-f  f1"></div>';
                    content += '<div class="u-n-f  f2"></div>';
                    content += '<div class="u-n-f  f3"></div>';
                    content += '</div>';
                    content += '</div>';
                }
                document.write(content);
                </script>
            </div>
            
            <div class="interno">
          {% for eq in rack.equipamentos %}
               <div class="{% if eq.pos_col %} pos_{{eq.pos_col}} {% endif %}  {% if eq.descricao %}equip"{% endif %} 
                   style="margin-top:{{ eq.eixoY }}px; height:{{ eq.altura }}px;">
                   <div>
                       <div style="height:{{ eq.altura }}px;">
                        {% if eq.pos_col %}
                            {% if eq.tam >= 15 %}
                                {{ eq.descricao|truncatechars:80 }}
                            {% elif eq.tam >= 12 %}
                                {{ eq.descricao|truncatechars:65 }}
                            {% elif eq.tam >= 9 %}
                                {{ eq.descricao|truncatechars:50 }}            
                            {% elif eq.tam >= 6 %}
                                {{ eq.descricao|truncatechars:35 }}
                            {% else %}
                                {{ eq.descricao|truncatechars:20 }}
                            {% endif %}
                        {% else %}
                            {% if eq.tam >= 15 %}
                                {{ eq.descricao|truncatechars:150 }}
                            {% elif eq.tam >= 12 %}
                                {{ eq.descricao|truncatechars:120 }}
                            {% elif eq.tam >= 9 %}
                                {{ eq.descricao|truncatechars:90 }}            
                            {% elif eq.tam >= 6 %}
                                {{ eq.descricao|truncatechars:60 }}
                            {% else %}
                                {{ eq.descricao|truncatechars:30 }}
                            {% endif %}
                        {% endif %}
                        </div>
                    </div>
                    {% if eq.imagem %}<img src="{{ eq.imagem }}" />{% endif %}
               </div>
          {% endfor %}
            </div>
        {% if rack.equipamentos_fora_visao %}
            <div class="outros">
                <div class="outros-content">
                <table>
                    <caption class="outros-title">Outros equipamentos.</caption>
                    <tr>
                        <th>Desc</th>
                        <th>Tam</th>
                        <th>Pos</th>
                        <th>Col</th>
                    </tr>
                    {% for eq in rack.equipamentos_fora_visao %}
                        <tr>
                            <td>
                                {{ eq.descricao|truncatechars:45 }}
                            </td>
                            <td>{{ eq.tam }}</td>
                            <td>{{ eq.pos }}</td>
                            <td>{{ eq.pos_col }}</td>
                        </tr>
                    {% endfor %}
                </table>
                </div>
            </div>
           {% endif %}
        </div>
    {% endfor %}
{% endfor %}
</div>

