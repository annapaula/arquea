{% load proto_tags %}
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>
@import url('/var/www/media/css/pdf.css');


@page {
  size:a4 landscape;
          background-image: url('/var/www/media/img/papel_timbrado_paisagem.jpg');
  top: 3.6cm;
  left: 1.5cm;
  right: 1.5cm;
  bottom: 2cm;
  @frame footer {
                -pdf-frame-content: footerContent;
                bottom: 1cm;
                margin-right: 1cm;
                height: 1cm;
                left: -2.3cm;
                }
}
</style>
<style type="text/css">
th {text-align: left;}
</style>
</head>
<body>
<h1 repeat="1">Inventário por termo</h1>

    <h4>Patrimôniodo termo de outorga {{ t }}</h4>

    <table border="0" repeat="1" cellpadding="5">
    <tr><th>Patrimônio FMUSP</th><th width="8%">NF</th><th colspan="2"  >Descrição - complemento</th><th>Valor</th><th>Marca</th><th width="10%">NS</th><th>Estado</th><th width="30%">Localização</th><th>Posição</th></tr>
    {% for t in termos %}
        {% for tp in t.tipos %}
           {% for pg in tp.pagamentos %}
              <tr><td></td><td>{{ pg.pg.protocolo.num_documento }}</td><td colspan="6"></td></tr>
              {% for p in pg.patrimonios %}
                 <tr><td>{{ p.numero_fmusp|default_if_none:"" }}</td><td></td><td colspan="2">{% if p.equipamento %}[{{ p.equipamento.tipo }}] {% endif %}{{ p.descricao }} - {{ p.complemento|default:"" }}</td><td>{{ p.valor|moeda }}</td><td>{{ p.marca }}</td><td>{{ p.ns }}</td><td>{{ p.historico_atual.estado }}</td><td>{{ p.historico_atual.endereco }}</td><td>{{ p.historico_atual.posicao|default_if_none:"" }}</td></tr>
                 {% for pf in p.contido.all %}
                    <tr><td colspan="2"></td><td width="10px"></td><td width="30%">{% if pf.equipamento %}[{{ pf.equipamento.tipo }}] {% endif %}{{ pf.descricao }} - {{ pf.complemento|default:"" }}</td><td>{{ pf.valor }}</td><td>{{ pf.marca }}</td><td>{{ pf.ns }}</td><td>{{ pf.historico_atual.estado }}</td><td>{{ pf.historico_atual.endereco }}</td><td>{{ pf.historico_atual.posicao|default_if_none:"" }}</td></tr>
                 {% endfor %}
              {% endfor %}
           {% endfor %}
        {% endfor %}
    {% endfor %}
    </table>

  <div id="footerContent">
      pág <pdf:pagenumber example="00" />
  </div>

</body>
</html>
