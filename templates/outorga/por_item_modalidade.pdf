{% extends "base.pdf" %}
{% load proto_tags %}
{% block pagesize %}size: a3 landscape;{% endblock %}
{% block content %}
<h1 repeat="1">Pagamentos por item de outorga do processo {{ termo }} e modalidade {{ modalidade }}</h1>

    <table border="0" cellpadding="5">
    {% for it in itens %}
           <tr><th colspan="4" style="text-align:left;">{{ it.item.descricao }} - {{ it.total|moeda }}</th></tr>
          {% for pg in it.pagtos %}
              <tr class="{% cycle 'z1' 'z2' %}"><td width="5%"></td><td width="5%">{{ pg.p.conta_corrente.cod_oper }}</td><td width="5%">{{ pg.p.conta_corrente.data_oper|date:"d/m" }}</td><td>{{ pg.p.protocolo.descricao2 }}</td><td>{{ pg.p.protocolo.referente }}</td><td width="10%"><a href="/financeiro/pagamento/{{ pg.p.id }}">{{ pg.p.valor_fapesp|moeda }}</a></td><td>[{{ pg.p.protocolo.tipo_documento.nome }} - <a href="/protocolo/protocolo/{{ pg.p.protocolo.id }}">{{ pg.p.protocolo.num_documento }}</a>]</td></tr>
              {% for a in pg.docs %}
                 <tr><td colspan="3"></td><td>{{ a.tipo.nome }}</td><td>parc. {{ a.parcial }}/pag. {{ a.pagina }}</td><td>{% if a.arquivo %}<a href="{{ a.arquivo.url }}">arquivo</a>{% endif %}</td></tr>
              {% endfor %}
              {% for pt in pg.p.patrimonio_set.all %}
                 <tr><td colspan="3"><td>(Patrimônio: marca, modelo e número de série)</td><td>{{ pt.marca }}</td><td>{{ pt.modelo }}</td><td>{{ pt.ns }}</td></tr>
              {% endfor %}
          {% endfor %}
    {% endfor %}
    </table>

{% endblock %}
