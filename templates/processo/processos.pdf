{% load proto_tags %}
{% load static %}
<html xmlns="http://www.w3.org/1999/xhtml" lang="pt-br" xml:lang="pt-br" >
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<style>
@import url('/var/www/media/css/pdf.css');
@page {
  size: a{{ tamanho }};

{% if tamanho == '3' %}
  background-image: url('{% get_media_prefix %}{{papelaria.papel_timbrado_retrato_a3}}');
  top: {{papelaria.retrato_a3_margem_superior}}cm;
  bottom: {{papelaria.retrato_a3_margem_inferior}}cm;
{% endif %}
{% if tamanho == '4' %}
  
  background-image: url('{% get_media_prefix %}{{papelaria.papel_timbrado_retrato_a4}}');
  top: {{papelaria.retrato_a4_margem_superior}}cm;
  bottom: {{papelaria.retrato_a4_margem_inferior}}cm;
{% endif %}

  background-size: contain;
  background-repeat:no-repeat;
  left: 1.5cm;
  right: 1.5cm;
  @frame footer {
                -pdf-frame-content: footerContent;
                bottom: 0.5cm;
                margin-right: 1cm;
                height: 1cm;
		left: -2.3cm;
                } 
} 
</style> 
</head>
<body>
<h1 repeat="1">Processos</h1>
    <table border="0" cellpadding="5">
    {% for a in areas %}
    <tr><td colspan="4">{{ a.area }}</td></tr>
        {% for g in a.grupos %}
        <tr><td width="5%"></td><td colspan="3">{{ g.grupo }}</td></tr>
            {% for m in g.macroprocessos %}
            <tr><td></td><td width="5%"></td><td colspan="2">{{ m.macroprocesso.nome }}</td></tr>
                {% for p in m.processos %}
                   <tr><td></td><td></td><td width="5%"></td><td>{{ p }}</td></tr>
                {% endfor %}
            {% endfor %}
        {% endfor %}
    {% endfor %}
    </table>

  <div id="footerContent">
      p√°g <pdf:pagenumber example="00" />
  </div> 
</body>
</html>
