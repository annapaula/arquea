{% extends "base.pdf" %}
{% load proto_tags %}
{% block pagesize %}a3 landscape{% endblock %}
{% block landscape %}_paisagem{% endblock %}
{% block extrastyle %}
td { padding-top:3px; padding-left:2px;}
th { padding-top:3px; }
table tr td {
  border:1;
}

 #id_form_recurso {}

 td.td_os span,
 td.td_v_unit span,
 td.td_v_simp span,
 td.td_v_cimp span,
 td.td_t_simp span,
 td.td_t_geral span
 {
     white-space:nowrap;
 }
 
    #tbl_content tr td:nth-child(1) {background-color:red}
    /* ID */
    #tbl_content td:nth-child(1) { width:0.9cm; }
    /* PROCESSO */
    #tbl_content td:nth-child(2) { width:1.8cm; }
    /* N.USP */
    #tbl_content td:nth-child(3) { width:1.1cm; }
    /* NF */
    #tbl_content td:nth-child(4) { width:1.7cm; }
    /* MODELO */
    #tbl_content td:nth-child(5) { width:2.7cm; }
    /* PART NUMBER */
    #tbl_content td:nth-child(6) { width:2.5cm; }
    /* NS */
    #tbl_content td:nth-child(7) { width:2.5cm; }
    /* APELIDO */
    #tbl_content td:nth-child(8) { width:2.1cm; }
    /* DESCRICAO */
    #tbl_content td:nth-child(9) { width:8.1cm; }
    /* POSICAO */
    #tbl_content td:nth-child(10) { width:2cm; }
    /* ESTADO */
    #tbl_content td:nth-child(11) { width:1.2cm; }
    
{% endblock %}
{% block content %}
<h1>Custos dos recursos contratados</h1>
<table border="1" repeat="1" id="tbl_content">
<tr>
    <th style="width:1.3cm;">Contrato</th>
    <th style="width:1.5cm;">OS</th>
    {% if not estado_selected or estado_selected == '0' %}
        <th style="width:1.2cm;">Est. OS</th>
    {% endif %}
    <th style="width:1.5cm;">Data Ini</th>
    <th style="width:1.5cm;">Data Fim</th>
    <th style="width:3.4cm;">Projeto</th>
    <th style="">Descrição</th>
    <th style="">Referente</th>
    <th style="width:1.3cm;">Unidade</th>
    <th style="width:2cm;">Preço unitário</th>
    <th style="width:0.9cm;">Qtd</th>
    <th style="width:2cm;">Custo mensal sem imposto</th>
    <th style="width:2cm;">Custo mensal com imposto</th>
    <th style="width:0.9cm;">Meses pagos</th>
    <th style="width:1.3cm;">Ref.</th>
    <th style="width:2cm;">Total sem imposto</th>
    <th style="width:2cm;">Total com imposto</th>
    <th style="width:1.2cm;">Nota fiscal</th>
    <th style="width:1.6cm;">Termo</th>
<tr>
{% for r in recursos %}
   <tr>
     <td>{{ r.planejamento.os.contrato.numero }}</td>
	 <td class="td_os"><span>{{ r.planejamento.os }}</span></td>
	 
	 {% if not estado_selected or estado_selected == '0' %}
        <td class="td_estado_os"><span>{{ r.planejamento.os.estado|default:'-' }}</span></td>
     {% endif %}
	 
     <td>{{ r.planejamento.os.data_inicio|date:"SHORT_DATE_FORMAT" }}</td>
     <td>{{ r.planejamento.os.data_rescisao|date:"SHORT_DATE_FORMAT" }}</td>
	 <td>{{ r.planejamento.projeto }}</td>
	 <td>{{ r.planejamento.tipo }}</td>
	 <td>{{ r.planejamento.referente }}</td>
	 <td class="td_v_unit"><span>{{ r.planejamento.unidade }}</span></td>
	 <td class="td_v_simp"><span>{{ r.planejamento.valor_unitario|moeda }}</span></td>
	 <td>{{ r.planejamento.quantidade }}</td>
	 <td class="td_v_simp"><span>{{ r.valor_mensal_sem_imposto|moeda }}</span></td>
	 <td class="td_v_cimp"><span>{{ r.valor_imposto_mensal|moeda }}</span></td>
	 <td>{{ r.quantidade }}</td>
	 <td class="td_ref"><span>{{r.mes_referencia|default:"-"}} / {{r.ano_referencia|default:"-"}}</span></td>
	 <td class="td_t_simp"><span>{{ r.total_sem_imposto|moeda }}</span></td>
	 <td>{{ r.total_geral|moeda }}</td>
	 <td class="td_t_geral"><span>{{ r.pagamento.protocolo.num_documento }}</span></td>
     <td class="td_termo"><span>{{ r.pagamento.termo }}</span></td>
   </tr>
{% endfor %}
</table>
{% endblock %}
