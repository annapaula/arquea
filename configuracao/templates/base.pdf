{% load l10n %}
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <link rel="stylesheet" type="text/css" href="static:css/pdf_weasy.css">
  {% block extrahead %}{% endblock %}
<style>
{% block extrastyle %}
{% endblock %}
@page {
  size: {% block size %}a4{% endblock %};
  background-image: url('media:{% block background %}{{papelaria.papel_timbrado_retrato_a4}}{% endblock %}');
  background-position: conter top;
  background-size: 100% 102%;
  background-repeat:no-repeat;
  padding-top: {% block top %}{{papelaria.retrato_a4_margem_superior|default:0.5|unlocalize}}{% endblock %}cm;
  padding-left: 1.5cm;
  padding-right: 1.5cm;
  padding-bottom: {% block bottom %}{{papelaria.retrato_a4_margem_inferior|default:0.5|unlocalize}}{% endblock %}cm;
  margin: 0;
  margin-bottom: 1cm;
  @bottom-right {
    content: 'PÃ¡g ' counter(page);
    white-space: pre;
    color: grey;
    vertical-align: bottom;
    font-family: Arial;
    font-size: 0.7em;
    padding-right:1cm;
    padding-bottom:1cm;
  }
}
</style>
</head>
<body>
{% block content %}
{% endblock %}
